<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Tickets EJS</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>All Tickets EJS</h1>
  <div id="tickets">
    <% tickets.forEach(ticket => { %>
      <div class="ticket">
        <a href="/viewTicket/<%= ticket.ticketID %>">
          #<%= ticket.ticketID %> - <%= ticket.username %> - <%= ticket.description %> - <%= ticket.status %>
        </a>
      </div>
    <% }); %>
  </div>
  <button id="new-ticket-btn">New Ticket</button>
  <script>
    document.getElementById('new-ticket-btn').addEventListener('click', () => {
      window.location.href = "/newTicket.html";
    });
  </script>
</body>
</html>
